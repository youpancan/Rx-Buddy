<div class = "line">
  <div class='container mt-2'>
    <h3 class='client-name'><%= current_user.first_name %> <%= current_user.last_name %></h3>
    <%# <div class="container"> %>
    <h4 class='pharmacy-name'>Saamy Pharmacy</h4>
    <h5 class='active'>Active medications</h5>
    <%# </div> %>

    <%= render "shared/medication_card", active_meds: @active_meds, allergies: @allergies, medications: @medications, allergic_meds: @allergic_meds %>

    <% unless current_user.no_order_refills == [] %>
      <%= link_to "Review Order", review_path, class:'btn btn-primary mb-4' %>
    <% end %>
    <div>
    <h1 class= "h6"> Pharmacy Location</h1>
    </div>
    <div class= "mapid mb-4" style="width: 100%; height: 600px; border:solid; border-color:#E29578; margin-top: 3s;"
        data-controller="map"
        data-map-marker-value="<%= @marker.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
    <%= render "shared/chat" %>
  </div>
</div>
