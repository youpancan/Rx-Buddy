<% allergic_meds.each do |allergic| %>
  <% if allergic.name == active_med.medication.name %>
    <p class="d-flex justify-content-center" style="color:red;"><strong>⚠️ You are allergic to this medication! ⚠️</strong></p>
    <p class="d-flex justify-content-center" style="color:red;">Please contact your healthcare provider</p>
  <% end %>
<% end %>
